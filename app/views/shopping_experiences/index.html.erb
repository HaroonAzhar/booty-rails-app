<p id="notice"><%= notice %></p>

<h1>Shopping Experiences</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Cart</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_experiences.each do |shopping_experience| %>
      <tr>
        <td><%= shopping_experience.date %></td>
        <td><%= shopping_experience.cart_id %></td>
        <td><%= shopping_experience.total %></td>
        <td><%= link_to 'Show', shopping_experience %></td>
        <td><%= link_to 'Edit', edit_shopping_experience_path(shopping_experience) %></td>
        <td><%= link_to 'Destroy', shopping_experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shopping Experience', new_shopping_experience_path %>
